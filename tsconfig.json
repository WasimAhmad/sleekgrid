{
    "compileOnSave": false,
    "compilerOptions": {
      "allowJs": false,
      "declaration": true,
      "emitBOM": true,
      "lib": [
        "ES2015",
        "DOM"
      ],
      "newLine": "lf",
      "noEmit": true,
      "noEmitHelpers": false,
      "noImplicitAny": true,
      "isolatedModules": true,
      "sourceMap": false,
      "skipLibCheck": false,
      "outDir": "./dist",
      "moduleResolution": "Node",
      "target": "ESNext",
      "useDefineForClassFields": false
    },
    "include": ["src"]
  }
