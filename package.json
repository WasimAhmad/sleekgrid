{
  "name": "@serenity-is/sleekgrid",
  "version": "1.2.4",
  "description": "A modern Data Grid / Spreadsheet component",
  "type": "module",
  "types": "./src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
        "types": "./src/index.ts",
        "import": "./dist/index.js"
    }
  },
  "files": [
    "build/defines.js",
    "build/tsconfig.base.json",
    "dist/**/*.css",
    "dist/**/*.js",
    "dist/**/*.map",
    "lib/**/*.js",
    "css/**/*.css",
    "src/**/*.ts",
    "src/**/*.css",
    "src/**/tsconfig.json"
  ],
  "scripts": {
    "prepare": "npm run build && npm run test",
    "build": "node build/build",
    "test": "npx jest",
    "www": "npm run build && cd docs && jekyll serve --livereload --config _config.yml,_config_local.yml"
  },
  "keywords": [
    "grid",
    "datagrid",
    "datatable",
    "SleekGrid",
    "SlickGrid",
    "spreadsheet",
    "table"
  ],
  "author": "Volkan Ceylan, Furkan Evran, Victor Tomaili (https://serenity.is)",
  "repository": "serenity-is/sleekgrid",
  "license": "MIT",
  "bugs": "https://github.com/serenity-is/sleekGrid/issues",
  "homepage": "https://github.com/serenity-is/sleekGrid#readme",
  "devDependencies": {
    "@happy-dom/jest-environment": "^6.0.4",
    "@types/jest": "^28.1.6",
    "@types/jquery": "2.0.48",
    "esbuild": "^0.14.50",
    "jest": "^28.1.3",
    "jquery": "^3.6.0"
  }
}
